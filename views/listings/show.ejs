<% layout('/layouts/boilerplate') %>
       <script>
         let mapToken="<%=mapToken%>";
         let lat="<%=lat%>";
         let lon="<%=lng%>";
         let place="<%=place%>"; 
       </script>
    <body>
        
        <div class="row">
            <div class="col-10 offset-1 col-md-6 offset-md-3">
                 <div class="owner ms-auto">
                        <i>Hosted by &nbsp;</i><b><%=data.owner['username']%></b>
                    </div>
                <div class="card listing-card">
                    <img src="<%=data.image['url']%>" class="card-img-top" alt="<%=data.image[filename]%>">
                    <div class="card-body mt-2">
                        <b class="card-title">
                            <%=data.title%>
                        </b>
                        <p class="card-text">
                            <%=data.description%><br>
                                &#8377; <%= data.price ? data.price.toLocaleString("en-IN") : "N/A" %><br>
                                    <%=data.location%><br>
                                        <%=data.country%></br> 
                        </p>
                    </div>
                    <%if(currUser && currUser._id.equals(data.owner._id)){%>
                    <div class="btns ">
                        <div class="edit">
                            <a class="btn btn-dark Btn" href="/listings/<%=data._id%>/edit">edit</a>
                        </div>
                        <div class="delete">
                            <form method="post" action="/listings/<%=data._id%>?_method=DELETE">
                                <button class="btn btn-dark" type="submit">delete</button>
                            </form>
                        </div>
                    </div>
                    <%}%>
                </div>
            </div>
            <%if(currUser){%>
            <hr/>
            <div class="col-6 offset-3 mb-5 mt-3">
                <h3>Leave a Review</h3>
                <form action="/listings/<%=data._id%>" method="post" class="needs-validation" novalidate>
                    <div class="mb-3 mt-4">
                        <!-- rating -->
                        <label for="rating">Rating</label>
                        <fieldset class="starability-growRotate mt-2" >
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" required />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" required />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" required />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" required />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" required />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                        <div class="invalid-feedback mt-4">please select rating !</div>
                        </fieldset>
                    </div>
                    <div class="mb-2 ">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea class="form-control" name="review[comment]" id="comment" cols="20" rows="5" maxlength="130" required></textarea>
                        <div class="invalid-feedback">Add some review</div>                
                    </div>
                    <button type="submit" class="mt-2 btn btn-outline-dark Btn">add review</button>
                </form>
            </div>
            <%}%>
            <hr/>
            <%if(data.reviews.length){%>
            <div class="col-8 offset-2 mb-3 mt-3">
                <div class="row">
                    <h3 class="ms-2">All Reviews</h3>
                    <% for(review of data.reviews) { %>
                    <div class="card ms-3 mt-2 revCard">
                    <div class="card-body">
                        <div class="top">
                        <h5 class="card-title mt-4"><%=review.author.username%>
                            <p class="starability-result" data-rating="<%=review.rating%>"></p></h5>
                        <div class="del">
                        <%if(currUser && currUser._id.equals(review.author._id)) {%>
                        <form class="mb-2" method="post" action="/listings/<%=data._id%>/<%=review._id%>?_method=DELETE">
                            <button type="submit" class="hide-border cross"><i class="fa-solid fa-xmark"></i></button>
                        </form>   
                        <% } %>
                        </div>
                        </div>
                        <p class="card-text mt-2 pb-1"><%=review.comment%></p>
                    </div>
                    </div>       
                    <% } %>
                </div>
                <hr/>
            </div>
            <% } %>
            <div id="map" class=" mt-3 offset-2 col-8"></div>             
        </div>

</body>