<% layout('/layouts/boilerplate') %>
    <body>
    <div id="top-options">
        <div class="filters-options d-none d-lg-flex">
            <button class="left" onclick="scrollContentLeft()"><i class="fa-solid fa-caret-left"></i></button>
        <div id="filters" class="d-none d-lg-flex ">
            <div class="filter">
                <a href="/listings/filter?category=trending">
                <div class="trending"><i class="fa-solid fa-fire"></i></div>
                <p>trending</p></a>
            </div>
            <div class="filter">
                <a href="/listings/filter?category=mountain">
                <div class="mountains"><i class="fa-solid fa-mountain"></i></div>
                <p>mountains</p></a>
            </div>
            <div class="filter">
                <a href="/listings/filter?category=beach">
                <div class="beach"><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>beach</p></a>
            </div>
            <div class="filter">
                <a href="/listings/filter?category=pool">
                <div class="swimming-pool"><i class="fa-solid fa-person-swimming"></i></div>
                <p>pool</p></a>
            </div>
            <div class="filter">
                <a href="/listings/filter?category=garden">
                <div class="garden"><i class="fa-brands fa-canadian-maple-leaf"></i></div>
                <p>garden</p></a>
            </div>
            <div class="filter">
                <a href="/listings/filter?category=arctic">
                <div class="arctic"><i class="fa-regular fa-snowflake"></i></div>
                <p>arctic</p></a>
            </div>
            <div class="filter">
                <a href="/listings/filter?category=hiking">
                <div class="hiking"><i class="fa-solid fa-person-hiking"></i></div>
                <p>hiking</p></a>
            </div>
            <div class="filter">
                <a href="/listings/filter?category=fall">
                <div class="fall"><i class="fa-solid fa-water"></i></div>
                <p>waterfall</p></a>
            </div>
        </div>
            <button class="right" onclick="scrollContentRight()"><i class="fa-solid fa-caret-right"></i></button>
        </div>
        <div class="dropdown d-lg-none mt-1 mb-2 d-flex align-items-center">
            <button style="height: 2.5rem;" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            filters</button>
            <ul class="dropdown-menu" >
                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-fire"></i>trending</a></li>
                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-mountain"></i>mountains</a></li>
                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-umbrella-beach"></i>beach</a></li>
                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-person-swimming"></i>pool</a></li>
                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-tag"></i>offers</a></li>
                <li><a class="dropdown-item" href="#"><i class="fa-regular fa-snowflake"></i>arctic</a></li>
                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-person-hiking"></i>hiking</a></li>
            </ul>
        </div>
        <div class="search-switch d-flex align-items-center">
        <div id="search" class="d-flex align-items-center me-2">
            <form method="get" action="/listings/search"  class="d-none d-sm-flex" role="search">
            <input class="form-control me-2" type="search" name="location" placeholder="Search for location" aria-label="Search"/>
            <button class="btn btn-outline-danger d-flex align-items-center" type="submit">
                    <i class="fa-solid fa-magnifying-glass me-1"></i>
                    <span>Search</span>
            </button> 
            </form>
        </div>
        <div class="form-check-reverse form-switch ">
               <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
               <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
        </div>
    </div>
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-xs-1">
            <% for(list of allListings){%>
                <a href="/listings/<%=list._id%>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%=list.image['url']%>" class="card-img-top" alt="<%=list.image.filename%>"
                            style="height: 12rem;">
                        <div class="card-img-overlay">
                            <p class="desc" ><%=list.description%></p>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <b class="title">
                                    <%=list.title%>    
                                </b></br>
                                <span class="price">&#8377; <%= list.price ? list.price.toLocaleString("en-IN") : "N/A" %></span>
                                <span class="taxes hide">+18% GST</span>
                            </p>
                        </div>
                    </div>
                </a>
            <%}%>
        </div>
    </body>